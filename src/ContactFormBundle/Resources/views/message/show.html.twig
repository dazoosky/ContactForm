{% extends 'base.html.twig' %}

{% block midCol %}
    <h1>Message</h1>

    <table class="table table-stiped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if message.date %}{{ message.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ message.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ message.surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ message.email }}</td>
            </tr>
            <tr>
                <th>Phoneno</th>
                <td>{{ message.phoneno }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ message.text }}</td>
            </tr>
            <tr>
                <th>Readstatus</th>
                <td>{% if message.readStatus %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        {% if message.readStatus == false %}
            <a href="{{ path('changeStatus', { 'id': message.id }) }}" class="btn btn-warning">Mark as read</a>
        {% endif %}
        <a href="{{ path('message_index') }}" class="btn btn-info">Back to the list</a><br>

    </div>
{% endblock %}
